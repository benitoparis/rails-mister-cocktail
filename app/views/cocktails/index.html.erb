
<div class="container">

  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://res.cloudinary.com/appfilesxkz/image/upload/v1534513092/sbazi8kxfoxunlyrj1mr.jpg')">

  <div class="banner-content">
    <h1>Des cocktails pour tous les gouts</h1>
    <p>Recette Cocktail et boisson</p>
    <a  href="#start" class="btn btn-primary btn-lg">Les cocktails</a>
  </div>

</div>

  <h1 id="start">Liste des cocktails</h1>

<br>
<br>



<div class="row">

    <% @cocktails.each do |cock| %>
      <%= link_to cocktail_path(cock.id)  do %>
            <div class="col-xs-12 col-sm-4">
              <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cock.photo, height: 300, width: 400, crop: :fill %>')">

                <div class="card-category">Populaire</div>
                <div class="card-description">
                  <h2> <%= cock.name %></h2>
                  <p>Very cool, the best</p>
                </div>

              </div>
            </div>
      <% end %>
    <% end %>

</div>




 <a class="card-link" href="#" ></a>



  <%= link_to "Add a new cocktail" , new_cocktail_path %>
</div>











